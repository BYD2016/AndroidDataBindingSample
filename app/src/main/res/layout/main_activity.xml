<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="io.github.kobakei.dbsample.MainActivity">

    <data>
        <variable
            name="viewModel"
            type="io.github.kobakei.dbsample.MainActivityViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ImageView Picasso sample"
            android:textAllCaps="false"
            android:onClick="@{viewModel::onImagePicassoButtonClick}"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView strike sample"
            android:textAllCaps="false"
            android:onClick="@{viewModel::onTextStrikeButtonClick}"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="RecyclerView scroll event sample"
            android:textAllCaps="false"
            android:onClick="@{viewModel::onRecyclerScrollButtonClick}"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ListView check position sample"
            android:textAllCaps="false"
            android:onClick="@{viewModel::onListChoiceButtonClick}"
            />

    </LinearLayout>

</layout>